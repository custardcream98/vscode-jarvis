{
  "name": "jarvis",
  "displayName": "Jarvis: Your Workspace Assistant",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/custardcream98/jarvis.git"
  },
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jarvis-sidebar-view",
          "title": "Jarvis",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "jarvis-sidebar-view": [
        {
          "type": "webview",
          "id": "jarvis-sidebar",
          "name": "Jarvis",
          "icon": "media/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "jarvis.restartServer",
        "title": "Restart Jarvis"
      },
      {
        "command": "jarvis.askToJarvis",
        "title": "Ask Jarvis About Project"
      }
    ],
    "configuration": {
      "title": "Jarvis",
      "properties": {
        "jarvis.Open_AI_Api_Key": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key"
        }
      }
    }
  },
  "scripts": {
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "pnpm run compile",
    "compile": "webpack --mode production --devtool hidden-source-map && cd ./webview-ui && pnpm run build",
    "watch": "concurrently \"tsc -watch -p . --outDir ./out\" \"cd ./webview-ui && pnpm run build:watch\"",
    "pretest": "pnpm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "build": "vsce package --no-dependencies",
    "openai-test": "ts-node ./src/completion/index.ts"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "@vscode/vsce": "^2.22.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "glob": "^10.3.10",
    "prettier": "^3.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "openai": "^4.24.1"
  }
}

{
  "name": "jarvis",
  "displayName": "jarvis",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/custardcream98/jarvis.git"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jarvis-sidebar-view",
          "title": "Jarvis",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "jarvis-sidebar-view": [
        {
          "type": "webview",
          "id": "jarvis-sidebar",
          "name": "Jarvis",
          "icon": "media/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "jarvis.restartServer",
        "title": "Restart Jarvis"
      },
      {
        "command": "jarvis.askToJarvis",
        "title": "Ask Jarvis About Project"
      }
    ],
    "configuration": {
      "title": "Jarvis",
      "properties": {
        "jarvis.Open_AI_Api_Key": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint . --fix",
    "test": "node ./out/test/runTest.js",
    "build": "vsce package --no-dependencies",
    "openai-test": "ts-node ./src/completion/index.ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.52.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "prettier": "^3.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vscode": "^1.1.37",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "openai": "^4.24.1"
  }
}
